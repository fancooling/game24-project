# Environment variables for local Docker development
# This file should NOT be committed to source control.

# A non-production secret key.
DJANGO_SECRET_KEY=django-insecure-local-dev-key-for-docker

# Run in debug mode for local development
DEBUG=True

# Allow connections from localhost and the Docker host
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend
CSRF_TRUSTED_ORIGINS=http://localhost:4200,http://127.0.0.1:4200
